{
  "name": "remol-packages",
  "version": "1.0.0",
  "private": true,
  "description": "mol_wire react bindings",
  "repository": "https://github.com/zerkalica/remol",
  "author": "Stefan Zerkalica <zerkalica@gmail.com>",
  "license": "MIT",
  "scripts": {
    "postinstall": "npm --workspace=@remol/boot run build",
    "clean": "npm --workspaces run clean",
    "build": "npm --workspaces run build",
    "up": "npm-check-updates -u && npm --workspaces run npm-check-updates -u && npm --workspaces run clean && npm install",
    "release": "lerna publish from-package"
  },
  "workspaces": [
    "remol/*"
  ],
  "devDependencies": {
    "@types/node": "^17.0.18",
    "lerna": "^4.0.0",
    "npm-check-updates": "^12.3.0",
    "typescript": "^4.5.5"
  }
}
